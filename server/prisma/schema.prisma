generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id  String   @id @default(auto()) @map("_id") @db.ObjectId
  name String?
  role String
  createdAt  DateTime @default(now()) //current TimeStamp
  email String
}